<shortcuts> 
   <programGroup defaultName="OmniLite" location="applications"/>
   <shortcut name="OmniLite ${project.version}"
             target="$INSTALL_PATH/omnilite.exe"
             description="OmniLite" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multibit.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall OmniLite ${project.version}"
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall OmniLite" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>